<?xml version="1.0"?>
<openerp>
    <data>

        <record id="pos_order_view_form_inherit_pos_cagnotte_coupon" model="ir.ui.view">
            <field name="name">pos.order.form</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form" />
            <field name="arch" type="xml">
                <data>
	                <xpath expr="//notebook/page[@string='Products']/field[@name='lines']/tree/field[@name='product_id']" position="after">
	                        <field name="account_cagnotte_id"/>
	                </xpath>
	                <xpath expr="//notebook/page[@string='Payments']/field[@name='statement_ids']/tree/field[@name='statement_id']" position="after">
	                        <field name="account_cagnotte_id"/>
	                </xpath>   
                </data>
            </field>
        </record>
        <record id="account_bank_statement_view_form_inherit_pos_cagnotte_coupon" model="ir.ui.view">
            <field name="name">account.bank.statement.form</field>
            <field name="model">account.bank.statement</field>
            <field name="inherit_id" ref="account.view_bank_statement_form" />
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@name='statement_line_ids']/field[@name='line_ids']/tree/field[@name='bank_account_id']" position="after">
                        <field name="account_cagnotte_id"/>
                </xpath>
            </field>
        </record>

        <record id="cagnotte_type_view_form_inherit_pos_cagnotte_coupon" model="ir.ui.view">
            <field name="name">cagnotte.type.form</field>
            <field name="model">cagnotte.type</field>
            <field name="inherit_id" ref="cagnotte_base.cagnotte_type_view_form" />
            <field name="priority" eval="20" />
            <field name="arch" type="xml">
                <field name="journal_id" position="after">
                    <field name="check_cagnotte_amount"/>
                </field>
           </field>
        </record>

    </data>
</openerp>

