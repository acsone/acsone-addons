<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="product_product_cagnotte" model="product.product">
            <field name="name">Cagnotte Expiration</field>
            <field name="standard_price">15</field>
            <field name="type">service</field>
            <field name="property_account_income" ref="cagnotte_base.cagnotte"/>
        </record>
        <record id="cagnotte_expiration" model="account.account">
            <field name="code">X5505</field>
            <field name="name">Cagnotte Expiration - (test)</field>
            <field name="parent_id" ref="account.cas"/>
            <field name="type">other</field>
            <field name="user_type" ref="account.data_account_type_income"/>
        </record>
        <record id="sequence_expiration_journal" model="ir.sequence">
            <field name="name">Account Default Expiration Journal</field>
            <field eval="3" name="padding"/>
            <field name="prefix">EXP/%(year)s/</field>
        </record>
        <record id="expiration_journal" model="account.journal">
            <field name="name">Expiration Journal - (test)</field>
            <field name="code">EXP</field>
            <field name="type">general</field>
            <field name="sequence_id" ref="sequence_expiration_journal"/>
            <field name="default_debit_account_id" ref="cagnotte_expiration"/>
            <field name="default_credit_account_id" ref="cagnotte_expiration"/>
        </record>
        <record id="expiration_cagnotte_type" model="cagnotte.type">
            <field name="name">Cagnotte ExpirationType</field>
            <field name="account_id" ref="cagnotte_base.cagnotte"/>
            <field name="journal_id" ref="cagnotte_base.cagnotte_journal"/>
            <field name="product_id" ref="product_product_cagnotte"/>
            <field name="expiration_journal_id" ref="expiration_journal"/>
            <field name="expiration_account_id" ref="cagnotte_expiration"/>
            <field name="expiration_time" eval="5"/>
        </record>
    </data>
</openerp>