<odoo>
    <record id="sale_cagnotte_pay_view_form" model="ir.ui.view">
        <field name="name">sale.cagnotte.pay.form</field>
        <field name="model">sale.cagnotte.pay</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="sale_order_id" invisible="1"/>
                        <field name="account_cagnotte_id"/>
                    </group>
                </group>
                <footer>
                    <button name="apply"
                            string="Apply"
                            class="btn-primary"
                            type="object"/>
                    <button string="Cancel"
                            class="btn-default"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_view_sale_cagnotte_pay" model="ir.actions.act_window">
            <field name="name">Pay With Cagnotte</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.cagnotte.pay</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="sale_cagnotte_pay_view_form"/>
            <field name="target">new</field>
        </record>
</odoo>
