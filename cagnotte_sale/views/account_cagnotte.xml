<odoo>
    <record id="account_cagnotte_view_form" model="ir.ui.view">
        <field name="name">account.cagnotte.form</field>
        <field name="model">account.cagnotte</field>
        <field name="inherit_id" ref="cagnotte_base.account_cagnotte_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='oe_button_box']//button/field[@name='solde_cagnotte_button']/parent::button" position="after">
                <button
                    class="oe_stat_button"
                    type="object"
                    name="action_open_cagnotte_sale_lines"
                    icon="fa-list">
                    <field name="sale_order_balance" string="Unbalanced Sales" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>
    <record id="account_cagnotte_view_tree" model="ir.ui.view">
        <field name="name">account.cagnotte.tree</field>
        <field name="model">account.cagnotte</field>
        <field name="inherit_id" ref="cagnotte_base.account_cagnotte_view_tree"/>
        <field name="arch" type="xml">
            <field name="solde_cagnotte" position="before">
                <field name="sale_order_balance"/>
            </field>
        </field>
    </record>

</odoo>
