<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
	    <record id="workflow_activity" model="ir.ui.view">
            <field name="name">workflow.activity.form</field>
            <field name="model">workflow.activity</field>
            <field name="inherit_id" ref="base.view_workflow_activity_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[group[@string='Actions']]" position="after">
                    <group string="Tasks">
                        <field name="task_create"/>
                        <field name="task_description"/>
                        <field name="task_deadline_days"/>
                        <field name="action_ids">
                            <tree editable="bottom">
                                <field name="name" />
                                <field name="action" />
                            </tree>
                        </field>
                    </group>
                </xpath>
             </field>
        </record>
    </data>
</openerp>