<odoo>
    <data>

       <record id="view_employee_form" model="ir.ui.view">
            <field name="name">hr.employee.form (hr_employee_contract_job)</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form" />
            <field name="arch" type="xml">
                <field name="job_id" position="before">
                    <field name="use_job_from_contract" />
                    <field name="contract_job_id" attrs="{'invisible': [('use_job_from_contract', '=', False)]}"/>
                </field>
                <field name="job_id" position="attributes">
                    <attribute name="attrs">{'invisible': [('use_job_from_contract', '=', True)]}</attribute>
                </field>
            </field>
        </record>

    </data>
</odoo>
